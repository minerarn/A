<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.a.mapper.TypeMapper">

    <select id="findAllWithPostCount" resultType="com.example.a.entity.Type">
        SELECT t.*,
               (SELECT COUNT(*) FROM post p WHERE p.type_id = t.id) AS postCount
        FROM type t
        ORDER BY t.id DESC
    </select>

    <select id="findAll" resultType="com.example.a.entity.Type">
        SELECT * FROM type ORDER BY id DESC
    </select>

    <select id="findById" resultType="com.example.a.entity.Type">
        SELECT * FROM type WHERE id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO type (name, enabled)
        VALUES (#{name}, #{enabled})
    </insert>

    <update id="update">
        UPDATE type
        SET name = #{name},
            enabled = #{enabled}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM type WHERE id = #{id}
    </delete>

    <select id="searchByName" resultType="com.example.a.entity.Type">
        SELECT * FROM type
        WHERE name LIKE CONCAT('%', #{name}, '%')
    </select>

    <select id="findAllEnabled" resultType="com.example.a.entity.Type">
        SELECT * FROM type WHERE enabled = 1 ORDER BY id DESC
    </select>

</mapper>